source 'https://rubygems.org'

# Debugger. Only works for MRI. For Rubinius, see:
# http://rubinius.com/doc/en/tools/debugger
gem 'byebug', platforms: :mri

# CLI app framework
gem 'gli'

# Library to manipulate Git repositories in Ruby.
gem 'git'

# I18n
gem 'i18n'

# Logging
gem 'logging'

# MySQL binding
gem 'mysql2'

# Mechanize is a networking library that enables tests with HTTP requests
gem 'mechanize'

# Colorize terminal output
gem 'paint'

# Syntax highlighter (used with redcarpet)
gem 'pygments.rb'

# Rake
gem 'rake'

# RestClient
gem 'rest-client'

# Markdown parser
gem 'redcarpet'

gem 'terminal-table'

gem 'colorize'
gem 'pry'
